<%- include('partials/header.ejs') -%>
<br>    
    <div class="container">
        <h2 style="margin-bottom: 1em;">Register Page</h2>
    
            <%if(message) {%>
                <div class="alert alert-danger"> <%=message%> </div>
            <%}%>
       
    </div>
    <br>


    <div class="container">
        <form class='form form-control' method="POST" action="register">
            First Name :
            <input type="text" name="first_name" required class='form form-control'> <br>
            Last Name :
            <input type="text" name="last_name" required class='form form-control'> <br>
            Username :
            <input type="text" minlength='6' maxlength='20' name="username" required class='form form-control'> <br>
            Password :
            <input type="password" minlength='6' maxlength='20' name="password" required class='form form-control'> <br>
            Confirmed-Password :
            <input type="password" minlength='6' maxlength='20' name="conPassword" required class='form form-control'> <br>

            <button class="btn btn-success" type="submit">Register</button>

        </form>
    </div>
    
</body>
</html>